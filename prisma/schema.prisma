generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  author    Author?
  favorites Favorite[]

  @@map("user")
}

model Author {
  id       Int     @id @default(autoincrement())
  bio      String?
  userId   Int     @unique
  user     User    @relation(fields: [userId], references: [id])
  posts    Post[]

  @@map("author")
}

model Post {
  id           Int        @id @default(autoincrement())
  title        String
  content      String
  publishedAt  DateTime   @default(now())
  authorId     Int
  author       Author     @relation(fields: [authorId], references: [id])
  favoritedBy  Favorite[]

  @@map("post")
}

model Favorite {
  id      Int    @id @default(autoincrement())
  userId  Int
  postId  Int
  user    User   @relation(fields: [userId], references: [id])
  post    Post   @relation(fields: [postId], references: [id])
  @@unique([userId, postId])

  @@map("favorite")
}